	*{tag: "#{namespace_for_tags}CodigoTributacaoMunicipio"} = ts_codigo_tributacao(rps.codigo_tributacao_municipio)

*{tag: "#{namespace_for_tags}Discriminacao"}   = ts_discriminacao(rps.description)

